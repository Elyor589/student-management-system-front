worker_processes 1;
daemon off;  # Important for Heroku

events { worker_connections 1024; }

http {
  include       mime.types;
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;

  server {
    listen $PORT;  # Changed from ERB to direct env variable
    server_name _;
    root /app/dist;  # Changed from HOME to /app
    index index.html;

    location / {
      try_files $uri $uri/ /index.html;
    }

    error_page 404 /index.html;
    location = /index.html {
      internal;
    }
  }
}